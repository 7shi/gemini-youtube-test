              "type": "object",
              "properties": {
                "speaker": {
                  "type": "string"
                },
                "transcription": {
                  "type": "string"
                }
              },
              "required": [
                "speaker",
                "transcription"
              ]
            }
          }
        },
        "required": [
          "time",
          "visuals",
          "audio"
        ]
